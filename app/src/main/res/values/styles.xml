<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlHighlight">@color/control_highlight</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:windowBackground">@color/light_gray</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:dialogTheme">@style/AppTheme.DialogTheme</item>
    </style>

    <style name="ActionBarTheme" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/dark_gray</item>
        <item name="android:displayOptions">showHome</item>
    </style>

    <style name="AppTheme.DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>


    <style name="PagerSlidingTabStrip">
        <!--<item name="pstsTabBackground">@drawable/sel_app_btn</item>-->
        <item name="pstsDividerColor">@android:color/white</item>
        <item name="pstsUnderlineColor">@android:color/white</item>
        <item name="pstsUnderlineHeight">0dp</item>
        <item name="pstsIndicatorHeight">2dp</item>
    </style>
    
    <!--styles for register/login-->
    <style name="AuthenticationLinearLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="LoginEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="met_baseColor">?colorAccent</item>
        <item name="met_primaryColor">?colorAccent</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="met_floatingLabelAnimating">true</item>
        <item name="met_textColor">@color/dark_gray</item>
        <item name="met_textColorHint">@color/text_hint</item>
    </style>

    <style name="SignupEditText" parent="LoginEditText">
        <item name="met_baseColor">@color/light_gray</item>
        <item name="met_primaryColor">@color/light_gray</item>
    </style>

    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/sel_app_btn</item>
        <item name="typeFace">GothamHTF-Book.ttf</item>
    </style>

    <style name="AppButtonAlt" parent="AppButton">
        <item name="android:background">@drawable/profile_setting_button_background</item>
        <item name="android:textColor">@drawable/profile_setting_button_text_color</item>
    </style>

    <style name="AppSmallButton" parent="Widget.AppCompat.Button.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/sel_app_btn</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:paddingLeft">@dimen/elements_half_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/elements_half_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/elements_half_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/elements_half_vertical_margin</item>
        <item name="android:minHeight">24dp</item>
    </style>

    <style name="CircleTextViewMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_circle_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_size_extra_large</item>
    </style>

    <style name="CircleTextViewSmall" parent="CircleTextViewMedium">
        <item name="android:background">@drawable/bg_circle_small</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="AppCardView" parent="AppCardViewBase" />

    <style name="AppCardViewBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">@dimen/cardview_elevation</item>
    </style>

    <!--CustomFontTextView-->
    <declare-styleable name="CustomFontTextView">
        <attr name="TextView_customTypeFace" format="string" />
    </declare-styleable>

    <!--CustomFontButton-->
    <declare-styleable name="CustomFontButton">
        <attr name="Button_customTypeFace" format="string" />
    </declare-styleable>
</resources>
