<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/fragment_profile_top_campaign_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="@dimen/fragment_profile_user_info_container_padding">

        <!--Campaign image-->
        <ImageView
            android:id="@+id/fragment_profile_top_campaign_item_image"
            android:layout_width="@dimen/fragment_profile_top_campaign_item_image_size"
            android:layout_height="@dimen/fragment_profile_top_campaign_item_image_size"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/fragment_profile_user_info_container_padding">

            <!--Name-->
            <TextView
                android:id="@+id/fragment_profile_top_campaign_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/font_size_large"
                tools:text="Sleiman Tanios" />

            <!--Separator-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/medium_gray" />

            <!--Share count-->
            <TextView
                android:id="@+id/fragment_profile_top_campaign_item_share_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:textSize="@dimen/font_size_medium"
                tools:text="32 Shares" />

            <!--Description-->
            <TextView
                android:id="@+id/fragment_profile_top_campaign_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/font_size_small"
                tools:text="Lorem tatoum Lorem tatoum Lorem tatoum Lorem tatoum " />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
