<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical"
              tools:context="com.samsao.snapzi.profile.ProfileFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/fragment_profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/dark_gray">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="start|center_vertical"
            android:adjustViewBounds="true"
            android:src="@drawable/white_logo" />

    </android.support.v7.widget.Toolbar>

    <!--User info-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_profile_user_info_container_height"
        android:orientation="horizontal"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <!--Letter tile-->
        <FrameLayout
            android:id="@+id/fragment_profile_letter_tile_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/fragment_profile_letter_tile_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/profile_letter_tile_gradient" />

            <com.ivankocijan.magicviews.views.MagicTextView
                android:id="@+id/fragment_profile_letter_tile_letter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:includeFontPadding="false"
                android:maxLength="1"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                app:typeFace="GothamHTF-Book.ttf"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/elements_horizontal_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/elements_vertical_margin">

                <!--Shares-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.ivankocijan.magicviews.views.MagicTextView
                        android:id="@+id/fragment_profile_share_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/font_size_extra_large"
                        tools:text="123"
                        app:typeFace="GothamHTF-Book.ttf"/>

                    <com.ivankocijan.magicviews.views.MagicTextView
                        android:id="@+id/fragment_profile_share_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:textAllCaps="true"
                        android:textColor="@color/primary_dark"
                        android:textSize="@dimen/font_size_medium"
                        tools:text="SHARES"
                        app:typeFace="GothamHTF-Book.ttf"/>

                </LinearLayout>

                <!--Separator-->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/medium_gray" />

                <!--Score-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.ivankocijan.magicviews.views.MagicTextView
                        android:id="@+id/fragment_profile_score_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/font_size_extra_large"
                        tools:text="456"
                        app:typeFace="GothamHTF-Book.ttf"/>

                    <com.ivankocijan.magicviews.views.MagicTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/profile_score"
                        android:textAllCaps="true"
                        android:textColor="@color/primary_dark"
                        android:textSize="@dimen/font_size_medium"
                        app:typeFace="GothamHTF-Book.ttf"/>

                </LinearLayout>

            </LinearLayout>

            <com.ivankocijan.magicviews.views.MagicButton
                android:id="@+id/fragment_profile_setting_button"
                style="@style/AppButtonAlt"
                android:text="@string/profile_settings" />

        </LinearLayout>

    </LinearLayout>

    <!--Feed buttons-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.ivankocijan.magicviews.views.MagicButton
            android:id="@+id/fragment_profile_campaigns_button"
            style="@style/AppButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/profile_feed_button_background"
            android:text="@string/profile_campaigns"
            android:textColor="@drawable/profile_feed_button_text_color"
            app:typeFace="GothamHTF-Book.ttf"/>

        <com.ivankocijan.magicviews.views.MagicButton
            android:id="@+id/fragment_profile_my_feed_button"
            style="@style/AppButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/profile_feed_button_background"
            android:text="@string/profile_my_feed"
            android:textColor="@drawable/profile_feed_button_text_color"
            app:typeFace="GothamHTF-Book.ttf"/>

    </LinearLayout>

    <!--Top campaigns container-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_profile_top_campaigns_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gray"
        android:visibility="gone" />

    <!--User feed container-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_profile_my_feed_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gray"
        android:visibility="gone" />

</LinearLayout>
