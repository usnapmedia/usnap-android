<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:isScrollContainer="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/fragment_register_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="FIRST NAME"
            app:met_floatingLabel="highlight"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/fragment_register_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="LAST NAME"
            app:met_floatingLabel="highlight"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/fragment_register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="EMAIL"
            app:met_floatingLabel="highlight"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/fragment_register_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="USERNAME"
            app:met_floatingLabel="highlight"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/fragment_register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PASSWORD"
            app:met_floatingLabel="highlight"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/fragment_register_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="BIRTHDAY"
            app:met_floatingLabel="highlight"/>

        <Button
            android:id="@+id/fragment_register_sign_up_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:layout_gravity="center"
            android:paddingTop="@dimen/elements_half_vertical_margin"
            android:paddingBottom="@dimen/elements_half_vertical_margin"
            android:paddingLeft="@dimen/elements_half_horizontal_margin"
            android:paddingRight="@dimen/elements_half_horizontal_margin"/>
    </LinearLayout>
</ScrollView>