<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.samsao.snapzi.camera.SelectMediaFragment">

    <FrameLayout
        android:id="@+id/fragment_select_media_camera_preview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"/>

    <TextView
        android:id="@+id/fragment_select_media_video_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:textColor="@android:color/holo_red_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_select_media_livefeed_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/live_feed_layout_height"
            android:layout_marginTop="@dimen/elements_half_vertical_margin"
            android:background="@color/black_alpha"
            android:paddingBottom="@dimen/elements_half_vertical_margin"
            android:paddingLeft="@dimen/elements_half_vertical_margin"
            android:paddingRight="@dimen/elements_half_vertical_margin"
            android:paddingTop="@dimen/elements_half_vertical_margin"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!--Camera top controls-->
            <Button
                android:id="@+id/fragment_select_media_flash_setup_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/elements_half_vertical_margin"
                android:visibility="gone"/>

            <Button
                android:id="@+id/fragment_select_media_flip_camera_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/elements_half_vertical_margin"
                android:text="FLIP"
                android:visibility="gone"/>
        </RelativeLayout>

    </LinearLayout>

    <!--Camera bottom controls-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <com.samsao.snapzi.camera.ProgressButton
            android:id="@+id/fragment_select_media_capture_media_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            app:radius="48dp"/>

        <LinearLayout
            android:layout_width="@dimen/fragment_select_media_latest_image"
            android:layout_height="@dimen/fragment_select_media_latest_image"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="@dimen/elements_vertical_margin"
            android:layout_marginLeft="@dimen/elements_vertical_margin"
            android:background="@color/black_alpha"
            android:padding="@dimen/elements_half_vertical_margin">

            <ImageView
                android:id="@+id/fragment_select_media_latest_image"
                android:layout_width="@dimen/fragment_select_media_latest_image_size"
                android:layout_height="@dimen/fragment_select_media_latest_image_size"
                android:scaleType="centerCrop"/>

        </LinearLayout>
    </FrameLayout>

</FrameLayout>
