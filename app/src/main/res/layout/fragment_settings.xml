<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/fragment_settings_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_gray"/>

        <LinearLayout
            android:id="@+id/fragment_settings_information_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <com.ivankocijan.magicviews.views.MagicTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fragment_settings_personal"
                android:textSize="@dimen/font_size_large"
                app:typeFace="GothamHTF-Book.ttf"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/elements_vertical_margin"
                android:orientation="horizontal">

                <!--Letter tile-->
                <FrameLayout
                    android:id="@+id/fragment_settings_letter_tile_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/elements_horizontal_margin">

                    <FrameLayout
                        android:id="@+id/fragment_settings_letter_tile_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/profile_letter_tile_gradient"/>

                    <com.ivankocijan.magicviews.views.MagicTextView
                        android:id="@+id/fragment_settings_letter_tile_letter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:includeFontPadding="false"
                        android:maxLength="1"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        app:typeFace="GothamHTF-Book.ttf"/>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/fragment_settings_name_editText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:gravity="top"
                        android:hint="@string/fragment_settings_name_hint"
                        android:imeOptions="actionDone"
                        android:inputType="textFilter"
                        android:maxLength="150"
                        android:minLines="3"
                        android:scrollbars="vertical"
                        android:textColor="@color/dark_gray"
                        android:textColorHint="@color/text_hint"/>

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/fragment_settings_birthday_editText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:focusableInTouchMode="false"
                        android:gravity="top"
                        android:hint="@string/fragment_settings_birthday_hint"
                        android:imeOptions="actionDone"
                        android:inputType="textFilter"
                        android:maxLength="150"
                        android:minLines="3"
                        android:scrollbars="vertical"
                        android:textColor="@color/dark_gray"
                        android:textColorHint="@color/text_hint"/>
                </LinearLayout>

            </LinearLayout>

            <com.ivankocijan.magicviews.views.MagicButton
                android:id="@+id/fragment_settings_save_btn"
                style="@style/AppButton"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/elements_vertical_margin"
                android:text="@string/fragment_settings_save_settings"
                android:textAllCaps="true"
                app:typeFace="GothamHTF-Book.ttf"/>

            <com.ivankocijan.magicviews.views.MagicTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fragment_settings_social"
                android:textSize="@dimen/font_size_large"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                app:typeFace="GothamHTF-Book.ttf"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/elements_vertical_margin">

                <LinearLayout
                    android:id="@+id/fragment_settings_facebook"
                    style="@style/AppButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/elements_half_horizontal_margin"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.ivankocijan.magicviews.views.MagicTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\uf230"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_size_large"
                        app:typeFace="fontawesome.ttf"/>

                    <com.ivankocijan.magicviews.views.MagicTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/elements_half_horizontal_margin"
                        android:text="Facebook"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        app:typeFace="GothamHTF-Book.ttf"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_settings_twitter"
                    style="@style/AppButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/elements_half_horizontal_margin"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.ivankocijan.magicviews.views.MagicTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\uf081"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_size_large"
                        app:typeFace="fontawesome.ttf"/>

                    <com.ivankocijan.magicviews.views.MagicTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/elements_half_horizontal_margin"
                        android:text="Twitter"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        app:typeFace="GothamHTF-Book.ttf"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/elements_vertical_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/fragment_settings_gplus"
                    style="@style/AppButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/elements_half_horizontal_margin"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.ivankocijan.magicviews.views.MagicTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\uf0d4"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_size_large"
                        app:typeFace="fontawesome.ttf"/>

                    <com.ivankocijan.magicviews.views.MagicTextView
                        android:id="@+id/fragment_settings_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/elements_half_horizontal_margin"
                        android:text="Google+"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        app:typeFace="GothamHTF-Book.ttf"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_settings_pinterest"
                    style="@style/AppButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/elements_half_horizontal_margin"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <com.ivankocijan.magicviews.views.MagicTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\uf0d3"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/font_size_large"
                        app:typeFace="fontawesome.ttf"/>

                    <com.ivankocijan.magicviews.views.MagicTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/elements_half_horizontal_margin"
                        android:text="Pinterest"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        app:typeFace="GothamHTF-Book.ttf"/>

                </LinearLayout>

            </LinearLayout>

            <com.ivankocijan.magicviews.views.MagicTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/fragment_settings_support"
                android:textSize="@dimen/font_size_large"
                app:typeFace="GothamHTF-Book.ttf"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/elements_vertical_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/fragment_settings_report_a_problem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/elements_half_horizontal_margin"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.ivankocijan.magicviews.views.MagicButton
                        android:id="@+id/fragment_settings_report_a_problem_btn"
                        style="@style/AppButtonAlt"
                        android:text="@string/fragment_settings_report_a_problem"
                        android:textAllCaps="true"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_settings_log_out"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/elements_half_horizontal_margin"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.ivankocijan.magicviews.views.MagicButton
                        android:id="@+id/fragment_settings_help_center_btn"
                        style="@style/AppButtonAlt"
                        android:text="@string/fragment_settings_help_center"
                        android:textAllCaps="true"/>
                </LinearLayout>

            </LinearLayout>

            <com.ivankocijan.magicviews.views.MagicButton
                android:id="@+id/fragment_settings_log_out_btn"
                style="@style/AppButtonAlt"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/elements_vertical_margin"
                android:text="@string/fragment_settings_log_out"
                android:textAllCaps="true"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
