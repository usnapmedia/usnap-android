<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.samsao.snapzi.social.ShareFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/fragment_share_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_section_bottom_border"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <FrameLayout
            android:layout_width="144dp"
            android:layout_height="256dp"
            android:layout_marginRight="@dimen/elements_half_horizontal_margin">

            <FrameLayout
                android:id="@+id/fragment_share_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/fragment_share_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/elements_half_horizontal_margin"
            android:layout_weight="1"
            android:orientation="vertical"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true">

            <com.ivankocijan.magicviews.views.MagicEditText
                android:id="@+id/fragment_share_comment_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="top"
                android:hint="@string/share_add_comment_hint"
                android:imeOptions="actionDone"
                android:inputType="textFilter"
                android:maxLength="150"
                android:minLines="3"
                android:scrollbars="vertical"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/text_hint"
                app:typeFace="GothamHTF-Book.ttf"/>

            <com.ivankocijan.magicviews.views.MagicTextView
                android:id="@+id/fragment_share_comment_characters_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/elements_vertical_margin"
                android:singleLine="true"
                android:textColor="@color/primary_light"
                android:textSize="@dimen/font_size_small"
                tools:text="132 characters"
                app:typeFace="GothamHTF-Book.ttf" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/elements_vertical_margin"
        android:layout_weight="1"
        android:background="@drawable/bg_section_top_border"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/fragment_share_facebook"
                style="@style/AppButton"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/elements_half_horizontal_margin"
                android:layout_weight="1">

                <com.ivankocijan.magicviews.views.MagicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:typeFace="fontawesome.ttf"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_size_large"
                    android:text="\uf230"/>

                <com.ivankocijan.magicviews.views.MagicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/elements_half_horizontal_margin"
                    android:text="Facebook"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    app:typeFace="GothamHTF-Book.ttf"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_share_twitter"
                style="@style/AppButton"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/elements_half_horizontal_margin"
                android:layout_weight="1" >

                <com.ivankocijan.magicviews.views.MagicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:typeFace="fontawesome.ttf"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_size_large"
                    android:text="\uf081"/>

                <com.ivankocijan.magicviews.views.MagicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/elements_half_horizontal_margin"
                    android:text="Twitter"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    app:typeFace="GothamHTF-Book.ttf"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/elements_vertical_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/fragment_share_gplus"
                style="@style/AppButton"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/elements_half_horizontal_margin"
                android:layout_weight="1" >

                <com.ivankocijan.magicviews.views.MagicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:typeFace="fontawesome.ttf"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_size_large"
                    android:text="\uf0d4"/>

                <com.ivankocijan.magicviews.views.MagicTextView
                    android:id="@+id/fragment_share_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/elements_half_horizontal_margin"
                    android:text="Google+"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    app:typeFace="GothamHTF-Book.ttf"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_share_pinterest"
                style="@style/AppButton"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/elements_half_horizontal_margin"
                android:layout_weight="1"
                android:visibility="invisible">

                <com.ivankocijan.magicviews.views.MagicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:typeFace="fontawesome.ttf"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_size_large"
                    android:text="\uf0d3"/>

                <com.ivankocijan.magicviews.views.MagicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/elements_half_horizontal_margin"
                    android:text="Pinterest"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    app:typeFace="GothamHTF-Book.ttf"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.ivankocijan.magicviews.views.MagicButton
            android:id="@+id/fragment_share_share_btn"
            style="@style/AppButton"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/elements_vertical_margin"
            android:text="@string/action_share"
            app:typeFace="GothamHTF-Book.ttf"/>

    </LinearLayout>

</LinearLayout>