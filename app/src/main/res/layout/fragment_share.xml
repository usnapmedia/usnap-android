<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.samsao.snapzi.social.ShareFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/fragment_share_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_section"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/fragment_share_image"
                android:layout_width="@dimen/fragment_share_image_height"
                android:layout_height="@dimen/fragment_share_image_height"
                android:scaleType="centerCrop"/>

            <FrameLayout
                android:id="@+id/fragment_share_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/elements_vertical_margin"
            android:background="@drawable/bg_section"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <EditText
                android:id="@+id/fragment_share_comment_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="top"
                android:hint="@string/share_add_comment_hint"
                android:inputType="textMultiLine"
                android:lines="3"
                android:maxLength="150"
                android:minLines="3"
                android:scrollbars="vertical"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/text_hint"/>

            <TextView
                android:id="@+id/fragment_share_comment_characters_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/elements_vertical_margin"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="@color/primary_light"
                android:textSize="@dimen/font_size_small"
                tools:text="132 characters"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/elements_vertical_margin"
            android:background="@drawable/bg_section"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/fragment_share_facebook"
                    style="@style/AppButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/elements_half_horizontal_margin"
                    android:layout_weight="1"
                    android:text="Facebook"/>

                <Button
                    android:id="@+id/fragment_share_twitter"
                    style="@style/AppButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/elements_half_horizontal_margin"
                    android:layout_weight="1"
                    android:text="Twitter"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/elements_vertical_margin"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/fragment_share_gplus"
                    style="@style/AppButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/elements_half_horizontal_margin"
                    android:layout_weight="1"
                    android:text="Google+"/>

                <Button
                    android:id="@+id/fragment_share_pinterest"
                    style="@style/AppButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/elements_half_horizontal_margin"
                    android:layout_weight="1"
                    android:text="Pinterest"
                    android:visibility="invisible"/>

            </LinearLayout>

            <Button
                android:id="@+id/fragment_share_share_btn"
                style="@style/AppButton"
                android:layout_marginTop="@dimen/elements_vertical_margin"
                android:text="@string/action_share"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>