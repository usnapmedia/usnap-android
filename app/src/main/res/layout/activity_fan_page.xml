<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_fan_page_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/dark_gray">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:adjustViewBounds="true"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/white_logo" />

    </android.support.v7.widget.Toolbar>

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/activity_fan_page_tabs"
        style="@style/PagerSlidingTabStrip"
        android:background="@null"
        app:pstsTabBackground="@drawable/sel_tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/viewpager_tabs_height"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_fan_page_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
