<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_photo_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_section_bottom_border"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/activity_photo_detail_first_letter_id"
            style="@style/CircleTextViewMedium"
            android:text="s"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/elements_horizontal_margin"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_photo_detail_user_name_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAllCaps="true"
                android:text="Sleiman"/>

            <TextView
                android:id="@+id/activity_photo_detail_time_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="2 Days ago"
                android:textColor="?colorPrimary"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/activity_photo_detail_image_view_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_section_top_border"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/activity_photo_detail_description_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JUST GOT SOME AMAZING NEW GLASSES FROM @ALDO #omg #fashion #love #mtl"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/elements_vertical_margin">

            <TextView
                android:id="@+id/activity_photo_detail_social_network_facebook"
                style="@style/CircleTextViewSmall"
                android:text="&#xf09a;"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/activity_photo_detail_social_network_twitter"
                style="@style/CircleTextViewSmall"
                android:layout_marginLeft="@dimen/elements_horizontal_margin"
                android:text="&#xf099;"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/activity_photo_detail_social_network_google_plus"
                style="@style/CircleTextViewSmall"
                android:layout_marginLeft="@dimen/elements_horizontal_margin"
                android:text="&#xf0d5;"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>