<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:paddingBottom="@dimen/activity_vertical_margin">

        <android.support.v7.widget.Toolbar
            android:id="@+id/activity_contest_page_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_gray">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:adjustViewBounds="true"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/ic_logo" />

        </android.support.v7.widget.Toolbar>

        <com.samsao.snapzi.fan_page.view.AspectRatioImageView
            android:id="@+id/activity_contest_page_imageView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:aspect_ratio="0.4"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.ivankocijan.magicviews.views.MagicTextView
                android:id="@+id/activity_contest_page_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/font_size_extra_large"
                app:typeFace="GothamHTF-Book.ttf"/>

            <com.ivankocijan.magicviews.views.MagicTextView
                android:id="@+id/activity_contest_page_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/elements_vertical_margin"
                android:textColor="@color/primary"
                app:typeFace="GothamHTF-Book.ttf"/>

            <com.ivankocijan.magicviews.views.MagicTextView
                android:id="@+id/activity_contest_page_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/elements_half_vertical_margin"
                android:gravity="center"
                app:typeFace="GothamHTF-Book.ttf"/>

            <com.ivankocijan.magicviews.views.MagicTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/elements_vertical_margin"
                android:layout_marginBottom="@dimen/elements_vertical_margin"
                android:text="@string/fragment_contest_page_prize"
                android:textSize="@dimen/font_size_large"
                app:typeFace="GothamHTF-Book.ttf"/>

            <com.ivankocijan.magicviews.views.MagicTextView
                android:id="@+id/activity_contest_page_prize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/elements_half_vertical_margin"
                app:typeFace="GothamHTF-Book.ttf"/>

        </LinearLayout>

        <com.ivankocijan.magicviews.views.MagicTextView
            android:id="@+id/activity_contest_page_rules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/elements_vertical_margin"
            android:paddingBottom="@dimen/elements_vertical_margin"
            android:text="@string/activity_contest_page_contest_rules"
            android:textSize="@dimen/font_size_large"
            android:textColor="@color/primary"
            app:typeFace="GothamHTF-Book.ttf"/>

        <com.ivankocijan.magicviews.views.MagicButton
            android:id="@+id/fragment_contest_btn"
            style="@style/AppButton"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/elements_vertical_margin"
            android:text="@string/enter_contest"
            app:typeFace="GothamHTF-Book.ttf"/>

    </LinearLayout>
</ScrollView>