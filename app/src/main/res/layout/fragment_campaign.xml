<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="96dp">

            <!--Campaign banner-->
            <com.samsao.snapzi.fan_page.view.AspectRatioImageView
                android:id="@+id/fragment_campaign_banner"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:scaleType="centerCrop"
                app:aspect_ratio="0.4"/>

            <!--Top 10-->
            <LinearLayout
                android:id="@+id/fragment_campaign_top_10_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/elements_vertical_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.ivankocijan.magicviews.views.MagicTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_weight="1"
                        android:text="@string/top_10"
                        android:textAllCaps="false"
                        android:textSize="@dimen/font_size_large"
                        app:typeFace="GothamHTF-Book.ttf"/>

                    <com.ivankocijan.magicviews.views.MagicButton
                        android:id="@+id/fragment_campaign_see_all_top_10_btn"
                        style="@style/AppSmallButton"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:text="@string/see_all"
                        app:typeFace="GothamHTF-Book.ttf"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/elements_vertical_margin"
                    android:orientation="horizontal">

                    <include
                        android:id="@+id/view_fragment_campaign_top_10_card_1"
                        layout="@layout/view_fragment_campaign_cardview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <include
                        android:id="@+id/view_fragment_campaign_top_10_card_2"
                        layout="@layout/view_fragment_campaign_cardview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/elements_half_horizontal_margin"
                        android:layout_weight="1"/>

                    <include
                        android:id="@+id/view_fragment_campaign_top_10_card_3"
                        layout="@layout/view_fragment_campaign_cardview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/elements_half_horizontal_margin"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_campaign_latest_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/elements_vertical_margin"
                    android:orientation="horizontal">

                    <com.ivankocijan.magicviews.views.MagicTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_weight="1"
                        android:text="@string/latest_uploads"
                        android:textAllCaps="false"
                        android:textSize="@dimen/font_size_large"
                        app:typeFace="GothamHTF-Book.ttf"/>

                    <com.ivankocijan.magicviews.views.MagicButton
                        android:id="@+id/fragment_campaign_see_all_latest_uploads_btn"
                        style="@style/AppSmallButton"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:text="@string/see_all"
                        app:typeFace="GothamHTF-Book.ttf"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/elements_vertical_margin"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <include
                            android:id="@+id/view_fragment_campaign_latest_uploads_card_1"
                            layout="@layout/view_fragment_campaign_cardview"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <include
                            android:id="@+id/view_fragment_campaign_latest_uploads_card_2"
                            layout="@layout/view_fragment_campaign_cardview"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/elements_half_horizontal_margin"
                            android:layout_weight="1"/>

                        <include
                            android:id="@+id/view_fragment_campaign_latest_uploads_card_3"
                            layout="@layout/view_fragment_campaign_cardview"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/elements_half_horizontal_margin"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/elements_vertical_margin"
                        android:orientation="horizontal">

                        <include
                            android:id="@+id/view_fragment_campaign_latest_uploads_card_4"
                            layout="@layout/view_fragment_campaign_cardview"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <include
                            android:id="@+id/view_fragment_campaign_latest_uploads_card_5"
                            layout="@layout/view_fragment_campaign_cardview"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/elements_half_horizontal_margin"
                            android:layout_weight="1"/>

                        <include
                            android:id="@+id/view_fragment_campaign_latest_uploads_card_6"
                            layout="@layout/view_fragment_campaign_cardview"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/elements_half_horizontal_margin"
                            android:layout_weight="1"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/elements_double_vertical_margin">

        <com.ivankocijan.magicviews.views.MagicButton
            android:id="@+id/fragment_campaign_contest_btn"
            style="@style/AppButton"
            android:layout_marginLeft="@dimen/elements_double_horizontal_margin"
            android:layout_marginRight="@dimen/elements_double_horizontal_margin"
            android:text="@string/enter_contest"
            app:typeFace="GothamHTF-Book.ttf"/>
    </FrameLayout>

</RelativeLayout>

