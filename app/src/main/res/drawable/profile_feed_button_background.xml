<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <gradient android:angle="90" android:endColor="@color/light_blue" android:startColor="@color/blue" android:type="linear" />
            <stroke android:width="1px" android:color="@color/medium_gray" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/light_gray" />
            <stroke android:width="1px" android:color="@color/medium_gray" />
        </shape>
    </item>
</selector>